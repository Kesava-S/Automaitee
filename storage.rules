rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    function isAuthenticated() {
      return request.auth != null;
    }

    match /{allPaths=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.resource.size < 5 * 1024 * 1024; // 5MB limit
    }
    
    // Specific rules for resumes if uploaded directly (though we use API now)
    match /resumes/{fileName} {
      allow write: if isAuthenticated() && request.resource.contentType.matches('application/pdf');
    }
  }
}
